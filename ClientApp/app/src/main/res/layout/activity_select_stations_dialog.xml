<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/scroll_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scroll_background_color="@color/colorAccent"
            app:scroll_selected_item_background="@color/white"
            app:scroll_item_text_color="@color/white"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_indicator_color="@color/white"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#FFC107"/>
        
    </LinearLayout>

</LinearLayout>
